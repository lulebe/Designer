<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_format_color_fill_grey600_24dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:clipToPadding="false">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:text="Fill Color"/>
            <Button
                android:id="@+id/btn_object_fillcolor"
                android:layout_width="88dp"
                android:layout_height="36dp"
                android:layout_marginTop="24dp"
                android:elevation="2dp"
                android:foreground="?attr/selectableItemBackground"/>
            <ImageView
                android:id="@+id/btn_object_extractfillcolor"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:layout_gravity="right|bottom"
                android:src="@drawable/ic_hexagon_grey600_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>
        </FrameLayout>
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_border_style_grey600_24dp"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/field_object_strokewidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:hint="Width"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="2"
                android:text="0"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:clipToPadding="false">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationY="-4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:text="Color"/>
            <Button
                android:id="@+id/btn_object_strokecolor"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:elevation="2dp"
                android:foreground="?attr/selectableItemBackground"/>
            <ImageView
                android:id="@+id/btn_object_extractstrokecolor"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_hexagon_grey600_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_rounded_corner_grey600_24dp"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/field_object_cornerradius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:hint="Corner Radius"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="3"
                android:text="0"/>
        </android.support.design.widget.TextInputLayout>
    </FrameLayout>

</merge>